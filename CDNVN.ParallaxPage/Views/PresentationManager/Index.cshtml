            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Previews", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("EditSlide", "Index", "Home", new { id = item.Id }, null)
        </td>
    </tr>
