    <script type="text/javascript" src="http://janpaepke.github.io/ScrollMagic/js/_mobile/iscroll-probe.js"></script>
    <script type="text/javascript" src="http://janpaepke.github.io/ScrollMagic/js/jquery.scrollmagic.min.js"></script>

</head>
    <body>
        @Html.Partial("_ParallaxController")
        <div class="">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
        
       
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/bootstrap")
        @*<script type="text/javascript" src="@Url.Content("~/Scripts/parllaxJS-tools.js")"></script>*@
        <script src="@Url.Content("~/Content/Plugins/Colpick/js/colpick.js")"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>
